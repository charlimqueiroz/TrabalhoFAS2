@using CadastroAluno.Web.Extensions

@model  IList<CadastroAluno.Domain.Aluno>


<div class="workplace">

    <div class="page-header">
        <h1>Categoria de Evento <small>Lista</small></h1>
    </div>

    <div class="row-fluid">

        <div class="span12">
            <div class="head clearfix">
                <div class="isw-grid"></div>
                <h1>Cadastro</h1>
                <ul class="buttons">
                    <li>
                        <a href="#" class="isw-settings"></a>
                        <ul class="dd-list">
                            <li><a href="#" url-modal="@Url.Action("AlunoInserir", "Aluno")" ><span class="isw-plus"></span>Novo</a></li>
                            <li><a href="#" url-modal="@Url.Action("AlunoEditar", "Aluno")" ><span class="isw-edit"></span>Editar</a></li>
                            <li class="list-excluir"><span><a href="#"><span class="isw-delete"></span>Excluir</a></span></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="block-fluid">
                <table width="100%" class="table" list-action="@Url.Action("AlunoListar", "Aluno")/"  delete-action="@Url.Action("AlunoExcluir", "Aluno")/" >
                    <thead>
                        <tr>
                            <th class="clmRadio"></th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Telefone</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                            <tr>
                                <td><input type="radio" data-value="@item.EncryptID" name="gridRadio" /></td>
                                <td>@item.Nome</td>
                                <td>@item.Email</td>
                                <td>@item.Telefone</td>
                            </tr>    
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2">Nenhum registro cadastrado.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="dr"><span></span></div>
</div>
<script type="text/javascript" src="~/Scripts/funcoes.js"></script>

