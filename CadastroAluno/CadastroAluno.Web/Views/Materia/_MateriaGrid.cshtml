@using CadastroAluno.Web.Extensions

@model  IList<CadastroAluno.Domain.Materia>


<div class="workplace">

    <div class="page-header">
        <h1>Cadastro Matéria <small>Lista</small></h1>
    </div>

    <div class="row-fluid">

        <div class="span12">
            <div class="head clearfix">
                <div class="isw-grid"></div>
                <h1>Cadastro</h1>
                <ul class="buttons">
                    <li>
                        <a href="#" class="isw-settings"></a>
                        <ul class="dd-list">
                            <li><a href="#" url-modal="@Url.Action("MateriaInserir", "Materia")" ><span class="isw-plus"></span>Novo</a></li>
                            <li><a href="#" url-modal="@Url.Action("MateriaEditar", "Materia")" ><span class="isw-edit"></span>Editar</a></li>
                            <li class="list-excluir"><span><a href="#"><span class="isw-delete"></span>Excluir</a></span></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="block-fluid">
                <table width="100%" class="table" list-action="@Url.Action("MateriaListar", "Materia")/"  delete-action="@Url.Action("MateriaExcluir", "Materia")/" >
                    <thead>
                        <tr>
                            <th class="clmRadio"></th>
                            <th>Descrição</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                            <tr>
                                <td><input type="radio" data-value="@item.EncryptID" name="gridRadio" /></td>
                                <td>@item.Descricao</td>
                                
                            </tr>    
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2">Nenhum registro cadastrado.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="dr"><span></span></div>
</div>
<script type="text/javascript" src="~/Scripts/funcoes.js"></script>

