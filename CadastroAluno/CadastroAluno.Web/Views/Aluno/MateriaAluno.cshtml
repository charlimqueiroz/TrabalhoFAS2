@model CadastroAluno.Web.Models.AlunoModel
@{
    ViewBag.Title = "MateriaAluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    @Html.DropDownListFor(model => model.Aluno.ID, new SelectList(Model.Alunos, "ID", "Nome", Model.Aluno.ID), "[Selecione]")
</div>
<div>
    @foreach (var item in Model.Materias)
    {
        @Html.CheckBox(item.Descricao, new { id = "ck_" + item.ID, name = "ck_" + item.ID })
    }
</div>
<div>
    <input type="submit" value="Salvar" />
</div>

